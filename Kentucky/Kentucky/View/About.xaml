<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kentucky.View.About"
             Title="Sobre" Style="{StaticResource BGSobre}">
  <ContentPage.ToolbarItems>
    <ToolbarItem Text="Ação 1" Order="Secondary"/>
    <ToolbarItem Text="Ação 2" Order="Secondary"/>
  </ContentPage.ToolbarItems>
  <ContentPage.Content>
    <Grid VerticalOptions="Center" HorizontalOptions="Center">
      <Grid.RowDefinitions>
        <RowDefinition Height="30"/>
        <RowDefinition Height="30"/>
        <RowDefinition Height="30"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="30"/>
        <RowDefinition Height="20"/>
        <RowDefinition Height="20"/>
        <RowDefinition Height="20"/>
        <RowDefinition Height="30"/>
      </Grid.RowDefinitions>
      <Label Grid.Row="0" Text="Projeto Kentucky" FontSize="Large" HorizontalTextAlignment="Center" Style="{StaticResource xLabel}"/>
      <Label Grid.Row="1" Text="Versão 1.0" FontSize="Large" HorizontalTextAlignment="Center" Style="{StaticResource xLabel}"/>
      <Label Grid.Row="2" Text="Uma aplicação desenvolvida por:" FontSize="Medium" HorizontalTextAlignment="Center" Style="{StaticResource xLabel}"/>
      <Image Grid.Row="3" Source="logo" HeightRequest="80"/>
      <Label Grid.Row="4" Text="Capsule Technology" FontSize="Large" HorizontalTextAlignment="Center" Style="{StaticResource xLabel}"/>
      <Label Grid.Row="5" Text="Everton Vanzella" FontSize="Medium" HorizontalTextAlignment="Center" Style="{StaticResource xLabel}"/>
      <Label Grid.Row="6" Text="Gabriel Dias" FontSize="Medium" HorizontalTextAlignment="Center" Style="{StaticResource xLabel}"/>
      <Label Grid.Row="7" Text="Gilson Santos" FontSize="Medium" HorizontalTextAlignment="Center" Style="{StaticResource xLabel}"/>
      <Label Grid.Row="8" Text="Jean Souza" FontSize="Medium" HorizontalTextAlignment="Center" Style="{StaticResource xLabel}"/>
    </Grid>
  </ContentPage.Content>
</ContentPage>