<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kentucky.View.Login">
  <ContentPage.Content>
    <Grid Padding="10" VerticalOptions="Center">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>
      <Label Grid.Row="0" Text="Login" FontSize="Large" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
      <Entry Grid.Row="1" Text="{Binding Login}" Placeholder="Nome de usuário ou e-mail"/>
      <Entry Grid.Row="2" Text="{Binding Senha}" Placeholder="Senha" IsPassword="True"/>
      <Button Grid.Row="3" Text="Entrar" Command="{Binding LoginCommand}"/>
      <Button Grid.Row="4" Text="Entrar Com O Facebook" Command="{Binding FacebookCommand}"/>
      <Label Grid.Row="5" Text="Esqueceu sua senha?" FontSize="Medium" FontAttributes="Bold" HorizontalTextAlignment="Center">
        <Label.GestureRecognizers>
          <TapGestureRecognizer Command="{Binding RecuperarCommand}"/>
        </Label.GestureRecognizers>
      </Label>
    </Grid>
  </ContentPage.Content>
</ContentPage>